{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./dist/uri-templates-es",
    "declaration": true,
    "declarationMap": false,
    "sourceMap": true,
    "target": "ES2018",
    "lib": ["ES2018"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "useUnknownInCatchVariables": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": [
    "./main/src/**/*.ts"
  ],
  "exclude": [
    "**/*.spec.ts",
    "**/*.test.ts"
  ]
}
